<div class="post-container">
  <% if @post.errors.full_messages.size > 0 %>
  <div class="alert"><%= @post.errors.full_messages.join(",") %></div>
  <% end %>
</div>
<div class="post-container">
  <%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <div>
    <%= f.label :category_id %>
    <%= f.collection_select(:category_id, Category.order(:title),:id, :title) %>
  </div>
  <%= f.submit %>
  <% end %>
</div>
