<div class="container">
  <h1><%= @post.title %></h1>
  <p><%= @post.body %></p>
  <p><%=@post.created_at%></p>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete,
  data: {confirm: "Are you sure?"} %>
</div>
<div class="container">
  <h2>Comments</h2>
  <h3>Add your Comments here</h3>

  <%= @comment.errors.full_messages.join(" ,") %>

  <%= form_for [@post, @comment] do |f| %>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
    <%= f.submit %>
  <% end %>
</div>
<div class="container">
  <% @post.comments.each do |comm| %>
  <%= comm.body %>
  <%= link_to "Delete", post_comment_path(@post, comm), method: :delete, data:{confirm: "Are you sure?"}%>
  <hr />
  <% end %>
</div>
